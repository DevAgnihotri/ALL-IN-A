rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own profile document
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own health metrics
    match /healthMetrics/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Booking system rules - simplified and permissive
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }
    
    // Booking slots rules - simplified and permissive  
    match /booking-slots/{slotId} {
      allow read, write: if request.auth != null;
    }
    
    // Personalization data
    match /personalization/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
